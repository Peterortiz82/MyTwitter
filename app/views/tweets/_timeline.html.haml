.col-md-8.pull-right#timeline
  .panel.panel-default
    .panel-heading
      = button_tag 'Show my tweets', id: 'show_tweets', class: 'btn btn-primary btn-lg pull-right'
      %h3 Timeline
    - @timeline.each do |t|
      .panel-heading
        .media-top.media-left
          = image_tag t.user.profile_image_url_https, class: 'media-object'
        .media-body
          %strong
            = link_to "@#{t.user.screen_name}", "https://twitter.com/#{t.user.screen_name}"
          %time
            = time_ago_in_words t.created_at
            ago
          %br
          %tweet-text
            = auto_link(t.text).html_safe