.navbar.navbar-default.navbar-static-top
  .container
    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    - if !current_user
      = link_to 'MyTwitter', root_path, class: "navbar-brand"
    - if current_user
      .navbar-collapse.collapse.navbar-responsive-collapse
        .navbar-right
          %ul.nav.navbar-nav
            = image_tag current_user.image, class: 'twitter-image'
            %li= link_to "Sign Out", signout_path
            = link_to 'Tweet', new_tweet_path, class: 'btn btn-default'