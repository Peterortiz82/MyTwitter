.navbar.navbar-default.navbar-static-top
  .container
    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    - if !current_user
      .navbar-collapse.collapse.navbar-responsive-collapse
        .navbar-brand
          \#MyTwitter
        = link_to "Sign in with Twitter", "/auth/twitter", class: 'btn btn-primary pull-right'
    .navbar-collapse.collapse.navbar-responsive-collapse
      - if current_user
      = link_to image_tag(current_user.image), tweets_path, class: 'img-responsive navbar-image'
        .navbar-right
          = link_to 'Tweet', new_tweet_path, class: 'btn btn-primary'
          %ul.nav.navbar-nav
            %li= link_to "Sign Out", signout_path
